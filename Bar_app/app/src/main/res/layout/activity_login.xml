<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context="com.example.jwpackage.JeddahWaterfrontAR.Login">

    <View
        android:layout_width="333dp"
        android:layout_height="20dp"
        android:layout_weight="60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/maven_pro"
        android:padding="18dp"
        android:text="Register and Log in"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="78dp"
        android:ems="1"
        android:fontFamily="@font/maven_pro"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawablePadding="90dp"
        android:ems="8"
        android:fontFamily="@font/maven_pro"
        android:hint="......"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#fff" />


    <Button
        android:id="@+id/loginbutn"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_login"
        android:clickable="true"
        android:fontFamily="@font/maven_pro"
        android:onClick="OnLogin"
        android:padding="16dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:fontFamily="@font/maven_pro"-->
        <!--android:text="Create an Account"-->
        <!--android:onClick="onReg"-->
        <!--android:textAllCaps="false"-->
        <!--android:textSize="10sp"-->
        <!--android:textColor="#ffffff"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:background="#3f2986"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/maven_pro"
        android:onClick="onReg"
        android:shadowColor="#000"
        android:padding="25dp"
        android:textStyle="bold"
        android:text="@string/createaccount"
        android:textSize="22sp"
        android:textColor="#ffffff" />
    <!--style="@style/TextAppearance.AppCompat.Body2"-->

</LinearLayout>
