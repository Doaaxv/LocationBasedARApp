<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context="com.example.jwpackage.JeddahWaterfrontAR.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Here you can put your logo or brand name -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="249dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="48dp"
            android:padding="16dp"
            android:src="@drawable/logoscreenn" />


        <Button
            android:id="@+id/loginbutn0"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:fontFamily="@font/maven_pro_bold"
            android:onClick="onLogin"
            android:padding="16dp"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:drawablePadding="12dp"
            android:fontFamily="@font/maven_pro_bold"
            android:padding="2dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="Or "
            android:textColor="#3F2986"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gustbutn"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_signup"
            android:clickable="true"
            android:fontFamily="@font/maven_pro_bold"
            android:padding="16dp"
            android:text="Guest"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:onClick="asGest"/>



    </LinearLayout>

</LinearLayout>
